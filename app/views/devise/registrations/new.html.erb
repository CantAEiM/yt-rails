<% content_for :title, 'Register' %>
<div class="register-wrapper">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :username do %>
      <i class='uil uil-user-circle'></i> Username
    <% end %>
    <%= f.text_field :username, autofocus: true %>

    <%= f.label :email do %>
      <i class='uil uil-envelope'></i> Email
    <% end %>
    <%= f.email_field :email, autocomplete: "email" %>

    <%= f.label :password do %>
      <i class='uil uil-key-skeleton'></i> password
      <% if @minimum_password_length %>    
        (min <%= @minimum_password_length %>)
      <% end %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>

    <%= f.label :password_confirmation do %>
      <i class='uil uil-key-skeleton'></i> password confirmation
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

    <%= f.submit "Sign up" %>
    <%= render "devise/shared/links" %>
<% end %>
</div>
